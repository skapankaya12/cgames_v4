{
  "version": 2,
  "buildCommand": "npm install && npm run postinstall && npm run build:game",
  "outputDirectory": "apps/game-platform/dist",
  "installCommand": "npm install",
  "framework": null,
  "env": {
    "NODE_VERSION": "20",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_VERSION": "20"
    }
  },
  "functions": {
    "apps/game-platform/api/invites/validate.ts": {
      "runtime": "nodejs20.x"
    },
    "apps/game-platform/api/assessments.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    }
  ]
} 