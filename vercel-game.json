{
  "version": 2,
  "buildCommand": "npm ci && npm run build:game",
  "outputDirectory": "apps/game-platform/dist",
  "installCommand": "npm install",
  "framework": null,
  "env": {
    "NODE_ENV": "production",
    "VITE_GAME_PLATFORM_URL": "https://hub.olivinhr.com",
    "VITE_HR_PLATFORM_URL": "https://app.olivinhr.com",
    "VITE_API_BASE_URL": "https://api.olivinhr.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "VITE_GAME_PLATFORM_URL": "https://hub.olivinhr.com",
      "VITE_HR_PLATFORM_URL": "https://app.olivinhr.com",
      "VITE_API_BASE_URL": "https://api.olivinhr.com"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    }
  ]
} 