{
  "version": 2,
  "buildCommand": "npm run build:hr",
  "outputDirectory": "apps/hr-platform/dist",
  "env": {
    "NODE_ENV": "production",
    "VITE_GAME_PLATFORM_URL": "https://game.olivinhr.com",
    "VITE_HR_PLATFORM_URL": "https://app.olivinhr.com",
    "VITE_API_BASE_URL": "https://app.olivinhr.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "VITE_GAME_PLATFORM_URL": "https://game.olivinhr.com",
      "VITE_HR_PLATFORM_URL": "https://app.olivinhr.com",
      "VITE_API_BASE_URL": "https://app.olivinhr.com"
    }
  },
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/*.js": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/hr/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/hr/*.js": {
      "runtime": "@vercel/node@3.0.0"  
    },
    "api/candidate/*.js": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/invite/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/superadmin/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/((?!api|assets|favicon.ico|vite.svg|.*\\.).*)",
      "dest": "/index.html"
    }
  ]
} 