{
  "version": 2,
  "buildCommand": "turbo run build --filter=hr-platform",
  "outputDirectory": "apps/hr-platform/dist",
  "installCommand": "npm install",
  "framework": null,
  "env": {
    "NODE_VERSION": "18"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    }
  ]
} 