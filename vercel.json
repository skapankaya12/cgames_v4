{
  "version": 2,
  "buildCommand": "npm run build:hr",
  "outputDirectory": "apps/hr-platform/dist",
  "env": {
    "NODE_ENV": "production",
    "VITE_GAME_PLATFORM_URL": "https://hub.olivinhr.com",
    "VITE_HR_PLATFORM_URL": "https://app.olivinhr.com",
    "VITE_API_BASE_URL": "https://api.olivinhr.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "VITE_GAME_PLATFORM_URL": "https://hub.olivinhr.com",
      "VITE_HR_PLATFORM_URL": "https://app.olivinhr.com",
      "VITE_API_BASE_URL": "https://api.olivinhr.com"
    }
  },
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node@4.0.0"
    },
    "api/*.js": {
      "runtime": "@vercel/node@4.0.0"
    },
    "api/hr/*.ts": {
      "runtime": "@vercel/node@4.0.0"
    },
    "api/hr/*.js": {
      "runtime": "@vercel/node@4.0.0"  
    },
    "api/candidate/*.js": {
      "runtime": "@vercel/node@4.0.0"
    },
    "api/invite/*.ts": {
      "runtime": "@vercel/node@4.0.0"
    },
    "api/superadmin/*.ts": {
      "runtime": "@vercel/node@4.0.0"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/((?!api|assets|favicon.ico|vite.svg|.*\\.).*)",
      "dest": "/index.html"
    }
  ]
} 