{
  "version": 2,
  "buildCommand": "npm run build:hr",
  "outputDirectory": "apps/hr-platform/dist",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": null,
  "env": {
    "NODE_VERSION": "20",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_VERSION": "20"
    }
  },
  "functions": {
    "apps/hr-platform/api/**.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/hr-platform/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    }
  ]
} 