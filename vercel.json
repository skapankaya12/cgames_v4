{
  "version": 2,
  "buildCommand": "npm run build:hr",
  "outputDirectory": "apps/hr-platform/dist",
  "installCommand": "npm install",
  "env": {
    "NODE_VERSION": "18.x"
  },
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  },
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node@2.15.0"
    },
    "api/*.js": {
      "runtime": "@vercel/node@2.15.0"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/((?!api|assets|favicon.ico|vite.svg|.*\\.).*)",
      "dest": "/index.html"
    }
  ]
} 