{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm install --prefix=../.. && cd ../.. && npm run build:game",
  "outputDirectory": "dist",
  "installCommand": "npm install --prefix=../..",
  "env": {
    "NODE_VERSION": "20",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_VERSION": "20"
    }
  },
  "functions": {
    "api/**.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    }
  ]
} 