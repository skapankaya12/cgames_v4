{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm install --prefix=../.. && cd ../.. && npm run build:game",
  "outputDirectory": "dist",
  "installCommand": "npm install --prefix=../..",
  "env": {
    "NODE_VERSION": "22.x",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_VERSION": "22.x"
    }
  },
  "rewrites": [

    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    }
  ]
} 