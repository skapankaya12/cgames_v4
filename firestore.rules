rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Companies collection - read access for authenticated HR users
    match /companies/{companyId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/hrUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/hrUsers/$(request.auth.uid)).data.companyId == companyId;
      
      // Projects subcollection - read/write for HR users of the same company
      match /projects/{projectId} {
        allow read, write: if request.auth != null && 
          exists(/databases/$(database)/documents/hrUsers/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/hrUsers/$(request.auth.uid)).data.companyId == companyId;
      }
    }
    
    // HR Users collection - users can read their own data
    match /hrUsers/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // Invites collection - read for authenticated users
    match /invites/{inviteId} {
      allow read: if request.auth != null;
    }
    
    // Allow super admins to read/write everything (for API access)
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'super_admin';
    }
  }
} 