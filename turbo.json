{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "NODE_VERSION",
    "SENDGRID_API_KEY",
    "FIREBASE_PROJECT_ID",
    "FIREBASE_CLIENT_EMAIL",
    "FIREBASE_PRIVATE_KEY",
    "FIREBASE_PRIVATE_KEY_B64",
    "VITE_FIREBASE_STORAGE_BUCKET",
    "VITE_FIREBASE_MESSAGING_SENDER_ID",
    "VITE_FIREBASE_APP_ID",
    "VITE_HR_PLATFORM_URL",
    "VITE_GAME_PLATFORM_URL",
    "VITE_API_BASE_URL"
  ],
  "tasks": {
    "build:tsc": {
      "outputs": ["packages/*/dist/**"],
      "env": ["NODE_VERSION"]
    },
    "build": {
      "dependsOn": ["build:tsc"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NODE_VERSION",
        "SENDGRID_API_KEY",
        "FIREBASE_PROJECT_ID",
        "FIREBASE_CLIENT_EMAIL",
        "FIREBASE_PRIVATE_KEY",
        "FIREBASE_PRIVATE_KEY_B64",
        "VITE_FIREBASE_API_KEY",
        "VITE_FIREBASE_AUTH_DOMAIN",
        "VITE_FIREBASE_PROJECT_ID",
        "VITE_FIREBASE_STORAGE_BUCKET",
        "VITE_FIREBASE_MESSAGING_SENDER_ID",
        "VITE_FIREBASE_APP_ID",
        "VITE_OPENAI_API_KEY",
        "VITE_HR_PLATFORM_URL",
        "VITE_GAME_PLATFORM_URL",
        "VITE_API_BASE_URL"
      ]
    },
    "//#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NODE_VERSION",
        "SENDGRID_API_KEY",
        "FIREBASE_PROJECT_ID",
        "FIREBASE_CLIENT_EMAIL",
        "FIREBASE_PRIVATE_KEY",
        "FIREBASE_PRIVATE_KEY_B64",
        "VITE_FIREBASE_API_KEY",
        "VITE_FIREBASE_AUTH_DOMAIN",
        "VITE_FIREBASE_PROJECT_ID",
        "VITE_FIREBASE_STORAGE_BUCKET",
        "VITE_FIREBASE_MESSAGING_SENDER_ID",
        "VITE_FIREBASE_APP_ID",
        "VITE_OPENAI_API_KEY",
        "VITE_HR_PLATFORM_URL",
        "VITE_GAME_PLATFORM_URL"
      ]
    },
    "apps/game-platform#build": {
      "dependsOn": ["build:tsc"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_VERSION",
        "SENDGRID_API_KEY",
        "FIREBASE_PROJECT_ID",
        "FIREBASE_CLIENT_EMAIL",
        "FIREBASE_PRIVATE_KEY",
        "FIREBASE_PRIVATE_KEY_B64",
        "VITE_FIREBASE_API_KEY",
        "VITE_FIREBASE_AUTH_DOMAIN",
        "VITE_FIREBASE_PROJECT_ID",
        "VITE_FIREBASE_STORAGE_BUCKET",
        "VITE_FIREBASE_MESSAGING_SENDER_ID",
        "VITE_FIREBASE_APP_ID",
        "VITE_OPENAI_API_KEY",
        "VITE_HR_PLATFORM_URL",
        "VITE_GAME_PLATFORM_URL",
        "VITE_API_BASE_URL"
      ]
    },
    "lint": {
      "env": ["NODE_VERSION"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_VERSION",
        "SENDGRID_API_KEY",
        "FIREBASE_PROJECT_ID",
        "FIREBASE_CLIENT_EMAIL",
        "FIREBASE_PRIVATE_KEY",
        "FIREBASE_PRIVATE_KEY_B64",
        "VITE_FIREBASE_API_KEY",
        "VITE_FIREBASE_AUTH_DOMAIN",
        "VITE_FIREBASE_PROJECT_ID",
        "VITE_FIREBASE_STORAGE_BUCKET",
        "VITE_FIREBASE_MESSAGING_SENDER_ID",
        "VITE_FIREBASE_APP_ID",
        "VITE_OPENAI_API_KEY",
        "VITE_HR_PLATFORM_URL",
        "VITE_GAME_PLATFORM_URL",
        "VITE_API_BASE_URL"
      ]
    },
    "type-check": {
      "dependsOn": ["build:tsc"],
      "env": ["NODE_VERSION"]
    },
    "clean": {
      "cache": false,
      "env": ["NODE_VERSION"]
    }
  }
} 